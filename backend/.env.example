# Rann Backend Environment Configuration
# Copy to .env and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=development
API_BASE_URL=http://localhost:3001

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/rann_backend?schema=public"

# Authentication & Security
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters"
JWT_EXPIRY="7d"
SESSION_SECRET="your-session-secret-key-minimum-32-characters"

# NEAR AI Configuration
NEAR_ACCOUNT_ID="your-near-account.testnet"
NEAR_PRIVATE_KEY="ed25519:your-private-key-here"
NEAR_NETWORK_ID="testnet"
NEAR_NODE_URL="https://rpc.testnet.near.org"
NEAR_WALLET_URL="https://wallet.testnet.near.org"
NEAR_HELPER_URL="https://helper.testnet.near.org"

# AI Service Configuration
AI_SERVICE_URL="https://api.fireworks.ai/inference/v1"
AI_SERVICE_KEY="your-fireworks-api-key"
AI_MODEL="accounts/fireworks/models/llama-v3p1-70b-instruct"

# Flow Blockchain Configuration
FLOW_NETWORK="testnet"
FLOW_ACCESS_NODE_API="https://rest-testnet.onflow.org"
FLOW_PRIVATE_KEY="your-flow-private-key"
FLOW_ACCOUNT_ADDRESS="0xYourFlowAccountAddress"
FLOW_CONTRACT_ADDRESS="0xYourContractAddress"
FLOW_CONTRACT_NAME="YodhaNFT"

# IPFS & Filecoin Configuration
IPFS_GATEWAY_URL="https://ipfs.io/ipfs/"
PINATA_API_KEY="your-pinata-api-key"
PINATA_SECRET_API_KEY="your-pinata-secret"
LIGHTHOUSE_API_KEY="your-lighthouse-api-key"
WEB3_STORAGE_TOKEN="your-web3-storage-token"

# Database Pool Configuration
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=10000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"
CORS_CREDENTIALS=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp,application/json"

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m

# Redis Configuration (Optional - for caching)
REDIS_URL="redis://localhost:6379"
REDIS_TTL=3600

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Development Tools
ENABLE_SWAGGER=true
ENABLE_DEV_ROUTES=true
ENABLE_DEBUG_LOGS=true
